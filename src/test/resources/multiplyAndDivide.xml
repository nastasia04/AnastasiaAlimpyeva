<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="multiplyAndDivide">

    <test name="multiplyFunctions">
        <classes>
            <class name="hw1.TestClassMultiplication">
                <methods>
                    <include name="testIntegerMultiplication"/>
                    <include name="testDoubleMultiplication"/>
                    <include name="testLongMultiplication"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="divideFunctions">
        <classes>
            <class name="hw1.TestClassDivision">
                <methods>
                    <include name="testIntegerDivision"/>
                    <include name="testLongDivision"/>
                    <include name="testDoubleDivision"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>